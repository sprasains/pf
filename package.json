{
  "name": "pumpflix",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "prisma generate --schema apps/api/prisma/schema.prisma",
    "db:push": "prisma db push --schema apps/api/prisma/schema.prisma",
    "db:seed": "ts-node apps/api/prisma/seed.ts",
    "dev:all": "concurrently \"pnpm --filter @pumpflix/web dev\" \"pnpm --filter @pumpflix/api dev\""
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@types/compression": "^1.8.0",
    "@types/cors": "^2.8.18",
    "@types/express-session": "^1.18.1",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.57",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "prisma": "5.22.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "turbo": "^1.13.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@ant-design/charts": "^2.3.0",
    "@prisma/client": "5.22.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/passport": "^1.0.17",
    "@types/passport-facebook": "^3.0.3",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/socket.io-client": "^1.4.36",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/winston": "^2.4.4",
    "antd": "^5.25.4",
    "axios": "^1.9.0",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.53.1",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "prom-client": "^15.1.3",
    "rate-limit-redis": "^4.2.1",
    "react-intersection-observer": "^9.16.0",
    "react-query": "^3.39.3",
    "socket.io-client": "^4.8.1",
    "stripe": "^18.2.0",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "zod": "^3.25.45"
  }
}
